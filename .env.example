# KeeperCheky Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, production)
KEEPERCHEKY_APP_ENVIRONMENT=development

# Log level (debug, info, warn, error)
KEEPERCHEKY_APP_LOG_LEVEL=debug

# Dry run mode - when true, no actual deletions will occur
KEEPERCHEKY_APP_DRY_RUN=true

# Server port
KEEPERCHEKY_SERVER_PORT=8000

# Database configuration
KEEPERCHEKY_DATABASE_TYPE=sqlite
KEEPERCHEKY_DATABASE_PATH=/app/data/dev.db

# =============================================================================
# RADARR CLIENT
# =============================================================================
# Enable/disable Radarr integration
KEEPERCHEKY_CLIENTS_RADARR_ENABLED=true

# Radarr service URL (use container name for Docker, or IP:port for external)
KEEPERCHEKY_CLIENTS_RADARR_URL=http://radarr:7878

# Radarr API Key (Settings → General → API Key)
RADARR_API_KEY=your_radarr_api_key_here

# =============================================================================
# SONARR CLIENT
# =============================================================================
# Enable/disable Sonarr integration
KEEPERCHEKY_CLIENTS_SONARR_ENABLED=true

# Sonarr service URL
KEEPERCHEKY_CLIENTS_SONARR_URL=http://sonarr:8989

# Sonarr API Key (Settings → General → API Key)
SONARR_API_KEY=your_sonarr_api_key_here

# =============================================================================
# JELLYFIN CLIENT
# =============================================================================
# Enable/disable Jellyfin integration
KEEPERCHEKY_CLIENTS_JELLYFIN_ENABLED=true

# Jellyfin service URL
KEEPERCHEKY_CLIENTS_JELLYFIN_URL=http://jellyfin:8096

# Jellyfin API Key (Dashboard → API Keys → Create New Key)
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# =============================================================================
# JELLYSEERR CLIENT
# =============================================================================
# Enable/disable Jellyseerr integration
KEEPERCHEKY_CLIENTS_JELLYSEERR_ENABLED=true

# Jellyseerr service URL
KEEPERCHEKY_CLIENTS_JELLYSEERR_URL=http://jellyseerr:5055

# Jellyseerr API Key (Settings → General → API Key)
JELLYSEERR_API_KEY=your_jellyseerr_api_key_here

# =============================================================================
# JELLYSTAT CLIENT
# =============================================================================
# Enable/disable Jellystat integration (Jellyfin statistics and playback tracking)
KEEPERCHEKY_CLIENTS_JELLYSTAT_ENABLED=true

# Jellystat service URL
KEEPERCHEKY_CLIENTS_JELLYSTAT_URL=http://jellystat:3000

# Jellystat API Key (Settings → API Keys)
JELLYSTAT_API_KEY=your_jellystat_api_key_here

# =============================================================================
# QBITTORRENT CLIENT
# =============================================================================
# Enable/disable qBittorrent integration
KEEPERCHEKY_CLIENTS_QBITTORRENT_ENABLED=true

# qBittorrent Web UI URL
KEEPERCHEKY_CLIENTS_QBITTORRENT_URL=http://qbittorrent:8080

# qBittorrent Web UI credentials
# Default: admin / adminadmin (change in qBittorrent Tools → Options → Web UI)
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin
